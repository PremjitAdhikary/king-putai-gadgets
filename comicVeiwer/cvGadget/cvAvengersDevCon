<Module>
  <ModulePrefs title="The Knot - Comic Viewer" />
  <Content type="html">
    <![CDATA[
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<script type="text/javascript">
//to hold the current page number
var bookmark = 0;
//holds the urls for all the pages, set them up as the order of pages to appear
var pageUrls = new Array(
	"https://sites.google.com/site/paintinbits/writeups/thirddigitalcomicthemaking/r-7-v2-complete-step-6.jpg",
  "https://sites.google.com/site/paintinbits/writeups/thirddigitalcomic/r-complete-a.jpg",
  "https://sites.google.com/site/paintinbits/writeups/thirddigitalcomic/r-complete-b.jpg",
  "https://sites.google.com/site/paintinbits/writeups/thirddigitalcomic/r-7-complete.jpg"
);
function prev(){
	if(bookmark!=0){
		bookmark--;
		updateScreen();
	}
	//else{alert('start>'+bookmark);}
}
function next(){
	if(bookmark!=(pageUrls.length-1)){
		bookmark++;
		updateScreen();
	}
	//else{alert('end>'+bookmark);}
}
function gotoPage(whichTB){
	//which page togo
	var gohere = (whichTB == 1)?document.getElementById('goTxt').value:document.getElementById('goTxtBelow').value;
	if(gohere>0 && gohere<pageUrls.length){
		bookmark=gohere;
		updateScreen();
	}
}
function gotoFirst(){
	//go to cover
	bookmark=0;
	updateScreen();
}
function gotoLast(){
	//go to end
	bookmark=pageUrls.length-1;
	updateScreen();
}
function updateScreen(){
	document.getElementById('screen').style.backgroundImage='url('+pageUrls[bookmark]+')';
	document.getElementById('goTxt').value=bookmark;
	document.getElementById('goTxtBelow').value=bookmark;
}
</script>
<style type="text/css">
	body {margin:0; padding:0;}
	#enclose {width: 900px; height: 533px;}
	#screen {width:800px; height:533px; padding:0px; float:left; background:#000000
		url(https://sites.google.com/site/paintinbits/writeups/thirddigitalcomicthemaking/r-7-v2-complete-step-6.jpg) no-repeat center; }
	#prev {width:50px; height:533px; padding:0px; float:left; }
	#next {width:50px; height:533px; padding:0px; float:left; }
	#goto {width:900px; padding:0px; text-align:center; color:white; background:#000000}
	#gotobelow {width:900px; padding:0px; text-align:center; color:white; background:#000000}
</style>
<div id="goto">
	<input type="button" value="First" onclick="gotoFirst()">
	<input type="button" value="Prev" onclick="prev()">
	Page 
	<input type="text" name="goTxt" id="goTxt" maxlength="2" value="0" style="width:20px;">
	<input type="button" value="Go" onclick="gotoPage(1)">
	<input type="button" value="Next" onclick="next()">
	<input type="button" value="Last" onclick="gotoLast()"><br>To Navigate: use buttons/sidebars or text+'Go' button
</div>
<div id="enclose">
	<div id="prev"><img src="https://sites.google.com/site/kingputaistoragea01/home/files/prev.jpg" height="533" onclick="prev()"></div>
	<div id="screen"><img src="https://sites.google.com/site/kingputaistoragea01/home/files/transparent.gif" 
			style="width:800px; height:533px;"></div>   
	<div id="next"><img src="https://sites.google.com/site/kingputaistoragea01/home/files/next.jpg" height="533" onclick="next()"></div>
</div>
<div id="gotobelow">
	<input type="button" value="First" onclick="gotoFirst()">
	<input type="button" value="Prev" onclick="prev()">
	Page 
	<input type="text" name="goTxt" id="goTxtBelow" maxlength="2" value="0" style="width:20px;">
	<input type="button" value="Go" onclick="gotoPage(2)">
	<input type="button" value="Next" onclick="next()">
	<input type="button" value="Last" onclick="gotoLast()">
</div>
    ]]>
  </Content>
