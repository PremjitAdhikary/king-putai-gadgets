<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="StikTrix" />
  <Content type="html">
    <![CDATA[
	<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
	<script type="text/javascript">
		function onButtonSubmitHere(){
			document.getElementById('boxresult').value = 
				document.getElementById('box1').value*100 + 
				document.getElementById('box2').value*10 + 
				document.getElementById('box3').value*1;
		}
	</script>
	
	<div id="opArea">
		<input type="text" id="box1">
		<input type="text" id="box2">
		<input type="text" id="box3"><br>
		<input type="button" value="Submit" onclick="onButtonSubmitHere()"><br>
		<input type="text" id="boxresult"  disabled>
	</div>

    ]]>
  </Content>
</Module>